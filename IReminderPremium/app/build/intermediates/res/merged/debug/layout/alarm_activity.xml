<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/details_tv_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/details_view_title_height"
        android:layout_marginBottom="-30dp"
        android:background="@color/primary"
        android:gravity="bottom"
        android:padding="@dimen/default_padding_4x"
        android:text="Birthday"
        android:textColor="@color/white"
        android:textSize="@dimen/details_view_title_text_size" />

    <com.cyno.reminder.fab.ButtonFloat
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/default_padding_4x"
        android:background="@color/accent_material_dark"
        materialdesign:iconDrawable="@drawable/abc_ic_clear_mtrl_alpha" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/details_frag_keys"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:gravity="right"
            android:text="@string/name" />

        <TextView
            android:id="@+id/details_tv_title"
            style="@style/details_frag_values"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:text="Dinesh Khobragade" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/details_frag_keys"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:gravity="right"
            android:text="@string/date" />

        <TextView
            android:id="@+id/details_tv_date"
            style="@style/details_frag_values"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:text="28 March" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/details_tv_days_left_key"
            style="@style/details_frag_keys"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:gravity="right"
            android:text="@string/days_left" />

        <TextView
            android:id="@+id/details_tv_days_left_value"
            style="@style/details_frag_values"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:text="5 days" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/details_tv_description_key"
            style="@style/details_frag_keys"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:gravity="right"
            android:text="@string/description" />

        <TextView
            android:id="@+id/details_tv_description_value"
            style="@style/details_frag_values"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:text="We came across a huge male Leopard which crossed our path and went into the bushes" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/hp/Desktop/Advanced%20Computing/Git/Apptwo/IReminderPremium/app/src/main/res/layout/alarm_activity.xml -->