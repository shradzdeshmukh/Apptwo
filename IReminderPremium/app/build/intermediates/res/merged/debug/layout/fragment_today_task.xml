<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.cyno.reminder_premium"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context="com.cyno.reminder_premium.ui.MainActivity" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize"
        app:subtitle="You have following tasks today"
        app:subtitleTextAppearance="@style/toolbar_subtitle_styleplanday"
        app:title="@string/plan_day_title"
        app:titleTextAppearance="@style/toolbar_title_style" />

    <ListView
        android:id="@+id/list_today_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_today_task_next"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="@dimen/default_padding"
        android:layout_marginTop="@dimen/default_padding"
        android:background="@color/primary"
        android:dividerHeight="0dp" >
    </ListView>

    <Button
        android:id="@+id/button_today_task_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/default_padding"
        android:background="@color/accent"
        android:padding="@dimen/default_padding"
        android:text="Next"
        android:textColor="@color/white" />

</RelativeLayout><!-- From: file:/C:/Users/hp/Desktop/Advanced%20Computing/Git/Apptwo/IReminderPremium/app/src/main/res/layout/fragment_today_task.xml -->