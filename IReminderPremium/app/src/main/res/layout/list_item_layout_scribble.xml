<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/scribble_item_root"
    android:visibility="gone"
    android:layout_height="@dimen/scribble_item_ht">

    <android.support.v7.widget.CardView

        android:layout_margin="@dimen/default_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:background="#eeeeee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_list_item_scribble"
                android:scaleType="centerCrop"
                android:src="@color/light_grey"
                android:visibility="visible"
                android:minWidth="200dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/title_gradient_background"
                android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_item_task_list_title_scribble"
                android:padding="@dimen/default_padding"
                android:layout_width="400dp"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/white"
                android:text="Dinesh Khobragade"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_item_task_list_date_scribble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_task_list_title"
                android:layout_marginRight="@dimen/default_padding"
                android:layout_toRightOf="@+id/task_item_image"
                android:paddingBottom="@dimen/default_padding"
                android:paddingLeft="@dimen/default_padding"
                android:text="28 th march"
                android:textColor="#EEEEEE"
                android:textSize="@dimen/text_size_small" />

            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>